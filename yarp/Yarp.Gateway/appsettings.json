{
  "ReverseProxy": {
    "Routes": {
      "weaher_route": {
        "ClusterId": "weather_api",
        "Match": {
          "Path": "/weather"
        },
        "Transforms": [
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "weather_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5050"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}